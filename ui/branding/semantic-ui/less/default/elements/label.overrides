.ui.label {
  &.large {
    padding: 0;
    max-width: 50%;
    .extra & {
      color: @brownColor;
    }
  }

  &.pointing {
    border: 1px solid @primaryRed;
  }
}

@media only screen and (max-width: @tabletSize) and (min-width: @mobileSize) {
  .ui.label {
    &.large {
      font-size: 0.7rem;
    }
  }
}

@media only screen and (max-width: @mobileSize) {
  .ui.label {
    &.large {
      font-size: 0.8rem;
    }
  }
}
