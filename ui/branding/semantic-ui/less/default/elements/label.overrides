.ui.label {
  &.large {
    padding: 0;
    .extra & {
      color: #7e7f79;
    }
  }

  &.pointing {
    border: 1px solid red;
  }
}

@media only screen and (max-width: 1200px) and (min-width: 992px) {
  .ui.label {
    &.large {
      font-size: 0.7rem;
    }
  }
}

@media only screen and (max-width: 992px) {
  .ui.label {
    &.large {
      font-size: 0.8rem;
    }
  }
}
