.ui.label {
  .extra & {
    color: #7e7f79;
  }
  &.pointing {
    border: 1px solid red;
  }
  .item & {
    font-size: 0.9rem;
    padding: 0;
  }

  @media only screen and (min-width: 1200px) and (max-width: 1500px) {
    .extra & {
      font-size: 0.9rem;
    }
  }

  @media only screen and (min-width: 992px) and (max-width: 1200px) {
    /* .ui.label {
      font-size: 1.1rem;
    } */
    .extra & {
      font-size: 0.8rem;
    }
  }
}
