@segment-gap-mobile: 95px;

.ui.segment:not(.secondary) {
  display: flex;

  &.vertical {
    height: 100%;
  }

  &.centered {
    flex-wrap: wrap;
    justify-content: center;
    align-content: center;
  }

  &.bg-bottom {
    height: 38vh;
    width: 100vw;
    position: absolute;
    bottom: 0;
    z-index: -1;
  }
  &.attached{
    padding: 20px
  }
}



@media only screen and (max-width: 992px) {
  .ui.vertical.segment {
    gap: @segment-gap-mobile;
  }
}

