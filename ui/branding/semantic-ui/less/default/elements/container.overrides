.ui.container {
  align-self: center;
  width: 80vw;

  &.search-container {
    margin-top: 70px;
  }
  &.main {
    margin-top: 100px;
  }

  @media only screen and (min-width: 1500px) {
    & {
      width: 70vw;
    }
  }
  @media only screen and (max-width: 992px) {
    main:not(.main-page) & {
      width: 100vw;
    }
  }
}

.twelve.wide.column .container {
  margin-top: 50px;
  margin-bottom: 15px;
}
