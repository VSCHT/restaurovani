h1.ui.header {
  font-size: 3.5rem;
}
/* h2.ui.header {
  font-size: 3.5rem;
} */

@media only screen and (min-width: 1500px) {
  h1.ui.header {
    font-size: 4.5rem;
  }
}

@media only screen and (min-width: 992px) and (max-width: 1200px) {
  h1.ui.header {
    font-size: 3rem;
  }
}

@media only screen and (max-width: 992px) and (min-width: 580px) {
  h1.ui.header {
    font-size: 4rem;
  }
}

@media only screen and (max-width: 580px) {
  h1.ui.header {
    font-size: 3rem;
  }
}
