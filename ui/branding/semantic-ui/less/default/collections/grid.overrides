
@gapWidth: 15px; 

.ui.grid {
  &.gapped {
    gap: @gapWidth;
    flex-direction: row;
    flex-wrap: nowrap;
    height: inherit;

    &.column {
      display: flex;
      justify-content: space-between;
      align-self: center;

      &.one {
        flex-wrap: wrap;
        flex-flow: column;
        width: auto;
      }
      &.two {
        gap: 63px;

        &.double {
          gap: @gapWidth * 5; 
        }

        &:has(.twelve.wide.column) {
          justify-content: center;
        }
      }
      &.three {
        gap: 10px;
      }
      #form-app &.one:not(:has(.ui.accordion)) {
        width: 60%;
        max-width: 600px;
      }
    }
  }

  &.column {
    &.one {
      &.separated {
        margin-top: 40px;
      }
    }
    &.two {
      justify-content: space-between;
    }
  }
}

.right.aligned.four.wide.column.computer.tablet.only {
  font-size: 1rem;
}

.column {
  &.predmety__aside__filter {
    margin-top: 80px;
  }
  &.predmety__form {
    margin: 0 auto;
    flex-direction: column;
    align-items: center;
    width: max-content;
  }
  &:has(.mt-20) {
    background-color: white;
  }
  &.img-container {
    width: 0px;
  }

  .fields &.one {
    width: 90%;
  }
}

.right.aligned.four.wide.column.computer.tablet.only {
  font-size: 1rem;
}

.column {
  &.predmety__aside__filter {
    margin-top: 80px;
  }
