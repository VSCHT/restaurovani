@media only screen and (max-width: 992px) {
  .ui.grid {
    &.gapped {
      width: 90vw;
      #form-app &.one {
        width: 95%;
      }
    }
    &.column {
      &.two {
        gap: @gapWidth;

        & > .column:not(.row) {
          width: 100%;
          flex-flow: column;
          width: 100%;
          align-items: center;
          display: flex;
        }
      }
    }
  }

  .column {
    &.eleven {
      text-align: center;
    }
  }

  .row.grid-searchbar {
    display: none;
  }
}
@media only screen and (max-width: 992px) and (min-width: 558px) {
  main:not(.main-page) .ui.grid.gapped {
    width: 100vw;
  }
}
@media only screen and (min-width: 1200px) and (max-width: 1500px) {
  .ui.grid {
    &.gapped {
      &.column {
        &.two {
          gap: 45px;
        }
      }
    }
  }

  .column.predmety__aside__filter {
    margin-top: 73px;
  }
}

@media only screen and (min-width: 992px) and (max-width: 1200px) {
  .ui.grid {
    &.gapped {
      gap: @gap-medium;
      height: inherit;

      &.column {
        &.two {
          @gap: 50px;
          &.double {
            gap: @gap * 2 ;
          }
        }
      }
    }
  }

  .column.predmety__aside__filter {
    margin-top: 76px;
  }
}
