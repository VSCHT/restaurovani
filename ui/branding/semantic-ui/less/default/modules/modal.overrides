.ui.modal {
  padding: 20px;
  background-color: @basicColor;

  & > .image.content {
    justify-content: space-between;
  }

  .tree-field & .actions {
    width: 80%;
    flex-wrap: wrap;
  }
}
@media only screen and (max-width: @mobileSize) {
  .ui.modal .image.content {
    flex-direction: row;
  }
}
